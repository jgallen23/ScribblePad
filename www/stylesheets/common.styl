html, body
  height: 100%

body
  margin: 0px
  -webkit-text-size-adjust: none
  overflow: hidden

*
  -webkit-user-select: none
  -webkit-tap-highlight-color: rgba(0,0,0,0)

button
  -webkit-appearance: none
  border: 0
  background: 0

#PageContainer
  overflow: hidden
  position: relative

.Page
  width: 100%
  height: 100%
  display: -webkit-box
  -webkit-box-orient: vertical
  -webkit-box-align: stretch
  overflow hidden

.Page [role='content']
  -webkit-box-flex: 1

canvas

.Sheets
  position: relative

.Sheet
  background url(../images/toolbar.png)
  position: absolute
  top: 0
  -webkit-transition: -webkit-transform 0.5s ease-in-out

  .content
    background url(../images/paper.png)
    margin-bottom 10px
    -webkit-box-shadow 0 0 100px #000 


.Toolbar
  height: 30px
  margin: 0
  padding: 5px 0 0 0

  li
    float: left
    margin: 0
    padding: 0 4px
    list-style: none
    color: #363636

  .pagination
    color: #fff
    line-height: 16px
    font-size: 14px
    font-family: Verdana

.Button
  height: 40px
  width: 40px
  display: block
  background-repeat: no-repeat
  background-position: center center

.Button:active
  opacity: 1

.Button2:active
  -webkit-box-shadow: 1px 1px 1px #333
  -webkit-border-radius: 10px

.Button span
  display: none

#Scribble
  .Button
     position: absolute

  .ViewAllButton
     bottom: 5px
     left: 45px

  .CameraButton
     left: 85px
     bottom: 5px

  .DeleteButton
     right: 85px
     bottom: 5px

  .NewButton
     right: 45px
     bottom: 5px

  .PreviousButton
     bottom: 5px
     left: 5px

  .NextButton
     bottom: 5px
     right: 5px

  .pagination
      width: 100%
      text-align: center
      margin: 0 auto
      position: absolute

.ViewAllButton
  background-image: url(../images/icons/normal/folder.png)

.CameraButton
  background-image: url(../images/icons/normal/camera.png)

.DeleteButton
  background-image: url(../images/icons/normal/trash.png)

.NewButton
  background-image: url(../images/icons/normal/plus.png)

.PreviousButton
  background-image: url(../images/icons/normal/arrowleft.png)

.NextButton
  background-image: url(../images/icons/normal/arrowright.png)

#ViewAll
  top: -10000px

  .Toolbar li.right
    float: right

.ImageList
  list-style: none
  margin: 0
  padding: 10px

  li
    display: block
    float: left
    margin: 5px 20px
    height: 100px
    overflow: hidden
    border: 1px solid #ccc

  li:active
    border: 1px solid #000

@media only screen and (max-width: 480px)
  .ImageList
    padding: 5px

  .ImageList li
    margin: 5px

@media only screen and (-webkit-min-device-pixel-ratio: 2)only screen and (min-device-pixel-ratio: 2)
  .Button
    background-size: 26px 26px

  .ViewAllButton
    background-image: url(../images/icons/hi-res/folder.png)

  .NewButton
    background-image: url(../images/icons/hi-res/plus.png)

  .DeleteButton
    background-image: url(../images/icons/hi-res/trash.png)

  .PreviousButton
    background-image: url(../images/icons/hi-res/arrowleft.png)

  .NextButton
    background-image: url(../images/icons/hi-res/arrowright.png)

  .CameraButton
    background-image: url(../images/icons/hi-res/camera.png)

